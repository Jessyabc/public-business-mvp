# Security Headers for All Pages
/*
  # Content Security Policy - Prevent XSS attacks
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://*.supabase.co https://api.github.com; connect-src 'self' https://*.supabase.co https://api.github.com https://api.pwnedpasswords.com; img-src 'self' data: https: blob:; style-src 'self' 'unsafe-inline'; font-src 'self' data: https://fonts.gstatic.com; frame-ancestors 'none'; base-uri 'self'; form-action 'self' https://*.supabase.co; upgrade-insecure-requests

  # Prevent clickjacking
  X-Frame-Options: DENY
  
  # Prevent MIME type sniffing
  X-Content-Type-Options: nosniff
  
  # Control referrer information
  Referrer-Policy: strict-origin-when-cross-origin
  
  # Restrict dangerous permissions
  Permissions-Policy: camera=(), microphone=(), geolocation=(), payment=(), usb=()
  
  # Prevent XSS attacks
  X-XSS-Protection: 1; mode=block
  
  # Force HTTPS
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload

# Static assets - aggressive caching (1 year)
# These files are fingerprinted by Vite, so they can be cached forever
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# JavaScript and CSS bundles (fingerprinted)
/*.js
  Cache-Control: public, max-age=31536000, immutable

/*.css
  Cache-Control: public, max-age=31536000, immutable

# Images in lovable-uploads (rarely change)
/lovable-uploads/*
  Cache-Control: public, max-age=604800, stale-while-revalidate=86400

# Other static assets (fonts, icons)
/*.woff2
  Cache-Control: public, max-age=31536000, immutable

/*.woff
  Cache-Control: public, max-age=31536000, immutable

/*.ico
  Cache-Control: public, max-age=604800

/*.png
  Cache-Control: public, max-age=604800, stale-while-revalidate=86400

/*.svg
  Cache-Control: public, max-age=604800, stale-while-revalidate=86400

# HTML documents - short cache with revalidation
/*.html
  Cache-Control: public, max-age=0, must-revalidate

# API endpoints - additional restrictions
/api/*
  # More restrictive CSP for API endpoints
  Content-Security-Policy: default-src 'none'; script-src 'none'
  Cache-Control: no-store
  
# Admin pages - extra security
/admin/*
  Content-Security-Policy: default-src 'self'; script-src 'self'; connect-src 'self' https://*.supabase.co; img-src 'self' data:; style-src 'self' 'unsafe-inline'; frame-ancestors 'none'